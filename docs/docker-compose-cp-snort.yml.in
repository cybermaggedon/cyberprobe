# Deploys a cybermon process cluster with ElasticSearch, Kibana and Gaffer
# back-end.

version: '3'
services:

  # ElasticSearch and Kibana
  elasticsearch:
    image: elasticsearch:7.7.1
    ports:
    - "9200:9200"
    environment:
      discovery.type: single-node
    restart: always
    shm_size: 1G
  kibana:
    image: kibana:7.7.1
    ports:
    - "5601:5601"
    environment:
      ELASTICSEARCH_URL: http://elasticsearch:9200/
    restart: always

  # Gaffer
  hadoop:
    image: docker.io/cybermaggedon/hadoop:2.10.0
    restart: always
  zookeeper:    
    image: docker.io/cybermaggedon/zookeeper:3.6.1
    restart: always
  accumulo:
    image: docker.io/cybermaggedon/accumulo-gaffer:1.12.0
    restart: always
  gaffer:
    image: docker.io/cybermaggedon/wildfly-gaffer:1.12.0
    ports:
    - "8080:8080"
    restart: always

  cyberprobe:
    image: docker.io/cybermaggedon/cyberprobe:@VERSION@
    command: cyberprobe /etc/config/cyberprobe.cfg
    volumes:
    - .:/etc/config
    - snort-logs:/var/log/snort
    restart: always
    network_mode: "host"
    cap_add:
      - NET_ADMIN

  snort:
    image: docker.io/cybermaggedon/snort:2.9.11a
    command: snort -i enp0s3 -A unsock -N -l /var/log/snort/ -c /etc/snort/snort.conf
    volumes:
    - snort-logs:/var/log/snort
    - ./snort.rules:/etc/snort/rules/local.rules
    restart: always
    network_mode: "host"
    cap_add:
      - NET_ADMIN

  # Pulsar
  exchange:
    image: apachepulsar/pulsar:2.5.1
    restart: always
    ports:
    - "6650:6650"
    - "8080:8080"

  # Cybermon receives packets on port 9000 and publishes events to Pulsar.
  cybermon:
    image: docker.io/cybermaggedon/cyberprobe:@VERSION@
    command: cybermon -p 9000 -c /etc/cyberprobe/pulsar.lua
    ports:
    - "9000:9000"
    restart: always
    environment:
      PULSAR_BROKER: ws://exchange:8080/

  # GeoIP: Adds location information to cybermon events and republishes.
  cybermon-geoip:
    image: docker.io/cybermaggedon/cybermon:@VERSION@
    command: cybermon-geoip
    restart: always
    environment:
      PULSAR_BROKER: pulsar://exchange:6650

  # Detector: Adds IOC information to output from cybermon-geoip
  cybermon-detector:
    image: docker.io/cybermaggedon/cyberprobe:@VERSION@
    command: cybermon-detector
    volumes:
    - .:/etc/iocs
    environment:
      STIX_INDICATORS: /etc/iocs/stix-default-combined.json
      PULSAR_BROKER: pulsar://exchange:6650
    restart: always

  # ElasticSearch loader
  cybermon-elasticsearch:
    image: docker.io/cybermaggedon/cyberprobe:@VERSION@
    command: cybermon-elasticsearch ioc http://elasticsearch:9200/
    environment:
      PULSAR_BROKER: pulsar://exchange:6650
    restart: always

  # Gaffer loader
  cybermon-gaffer:
    image: docker.io/cybermaggedon/cyberprobe:@VERSION@
    command: cybermon-gaffer
    environment:
      PULSAR_BROKER: pulsar://exchange:6650
    restart: always

volumes:
  snort-logs:

